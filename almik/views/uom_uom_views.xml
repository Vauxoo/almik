<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_uom_tree_view" model="ir.ui.view">
        <field name="name">uom.uom.tree.almik.inherit</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.product_uom_tree_view" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="product_ids" widget="many2many_tags" optional="show" />
                <field name="relation" optional="show" />
                <field name="factor_conversion" optional="show" />
            </field>
            <field name="category_id" position="after">
                <field name="factor_inv" optional="show" />
            </field>
        </field>
    </record>

    <record id="product_uom_form_view" model="ir.ui.view">
        <field name="name">uom.uom.form.almik.inherit</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.product_uom_form_view" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="relation" />
                <field name="product_ids" widget="many2many_tags" />
                <field name="factor_conversion" />
            </field>
        </field>
    </record>

    <record id="uom_uom_view_search" model="ir.ui.view">
        <field name="name">uom.uom.search.almik.inherit</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.uom_uom_view_search" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="product_ids" />
            </field>
        </field>
    </record>
</odoo>
