<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.inherit.almik</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <label for="partner_id" position="before">
                <field
                    name="serie"
                    attrs="{
                        'required': [('move_type', '=', 'out_invoice')],
                        'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])],
                    }"
                />
            </label>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="observations_per_line" />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/form/sheet/field[@name='name']" position="after">
                <field name="observations_per_line" />
            </xpath>
            <xpath expr="//button[@name='button_cancel_posted_moves']" position="attributes">
                <attribute name="groups">almik.group_can_see_request_cancellation_button</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_total']" position="after">
                <field name="gross_profit_margin" optional="hide" />
                <field name="gross_profit_margin_percentage" optional="hide" />
                <field name="cogs" optional="hide" />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='price_unit']" position="after">
                <field name="gross_profit_margin" />
                <field name="gross_profit_margin_percentage" />
                <field name="cogs" />
            </xpath>
        </field>
    </record>

    <record id="view_out_invoice_tree" model="ir.ui.view">
        <field name="name">account.move.tree.out.invoice.inherit.almik</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="serie" optional="show" />
            </field>
        </field>
    </record>

    <record id="view_out_credit_note_tree" model="ir.ui.view">
        <field name="name">account.move.tree.out.invoice.inherit.almik</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_credit_note_tree" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="serie" optional="show" />
            </field>
        </field>
    </record>
</odoo>
