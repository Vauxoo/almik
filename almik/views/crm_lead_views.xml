<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="crm_lead_view_form" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.almik</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="can_delete_initiatives_opportunity" invisible="1" />
            </xpath>
            <xpath expr="//group[@name='Misc']/field[@name='team_id']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
            <xpath expr="//group[contains(@attrs,'opportunity')]/field[@name='team_id']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
            <xpath expr="//group[@name='opportunity_partner']//field[@name='email_from']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
            <xpath expr="//group[@name='lead_info']//field[@name='email_from']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
            <xpath expr="//group[@name='opportunity_partner']//field[@name='phone']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
            <xpath expr="//group[@name='lead_info']//field[@name='phone']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
            <xpath expr="//group[@name='lead_partner']//field[@name='state_id']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
            <xpath expr="//page[@name='lead']//field[@name='state_id']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
            <xpath expr="//group[contains(@attrs,'lead')]/field[@name='user_id']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
            <xpath expr="//group[contains(@attrs,'opportunity')]/field[@name='user_id']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
            <xpath expr="//group[contains(@attrs,'lead')]/field[@name='tag_ids']" position="after">
                <field
                    name="tag_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color', 'no_create_edit': True, 'no_create': True}"
                    attrs="{'invisible': [('can_delete_initiatives_opportunity','=',True)], 'required': True}"
                />
            </xpath>
            <xpath expr="//group[contains(@attrs,'lead')]/field[@name='tag_ids']" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('can_delete_initiatives_opportunity','=',False)], 'required': True}</attribute>
                <attribute
                    name="options"
                >{'color_field': 'color', 'no_create_edit': False, 'no_create': False}</attribute>
            </xpath>
            <xpath expr="//group[@name='lead_priority']/field[@name='tag_ids']" position="after">
                <field
                    name="tag_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color', 'no_create_edit': True, 'no_create': True}"
                    attrs="{'invisible': [('can_delete_initiatives_opportunity','=',True)], 'required': True}"
                />
            </xpath>
            <xpath expr="//group[@name='lead_priority']/field[@name='tag_ids']" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('can_delete_initiatives_opportunity','=',False)], 'required': True}</attribute>
                <attribute
                    name="options"
                >{'color_field': 'color', 'no_create_edit': False, 'no_create': False}</attribute>
            </xpath>
            <xpath expr="//page[@name='lead']/group/group/field[@name='source_id']" position="after">
                <field
                    name="source_id"
                    options="{'no_create_edit': True, 'no_create': True}"
                    attrs="{'invisible': [('can_delete_initiatives_opportunity','=',True)], 'required': True}"
                />
            </xpath>
            <xpath expr="//page[@name='lead']/group/group/field[@name='source_id']" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('can_delete_initiatives_opportunity','=',False)], 'required': True}</attribute>
                <attribute
                    name="options"
                >{'color_field': 'color', 'no_create_edit': False, 'no_create': False}</attribute>
            </xpath>
            <xpath expr="//page[@name='lead']/group/group/field[@name='medium_id']" position="after">
                <field
                    name="medium_id"
                    options="{'no_create_edit': True, 'no_create': True}"
                    attrs="{'invisible': [('can_delete_initiatives_opportunity','=',True)]}"
                />
            </xpath>
            <xpath expr="//page[@name='lead']/group/group/field[@name='medium_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('can_delete_initiatives_opportunity','=',False)]}</attribute>
                <attribute
                    name="options"
                >{'color_field': 'color', 'no_create_edit': False, 'no_create': False}</attribute>
            </xpath>
            <xpath expr="//page[@name='lead']/group/group/field[@name='campaign_id']" position="after">
                <field
                    name="campaign_id"
                    options="{'create_name_field': 'title', 'always_reload': True, 'no_create_edit': True, 'no_create': True}"
                    attrs="{'invisible': [('can_delete_initiatives_opportunity','=',True)]}"
                />
            </xpath>
            <xpath expr="//page[@name='lead']/group/group/field[@name='campaign_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('can_delete_initiatives_opportunity','=',False)]}</attribute>
                <attribute
                    name="options"
                >{'color_field': 'color', 'no_create_edit': False, 'no_create': False}</attribute>
            </xpath>
            <xpath expr="//page[@name='extra']/group/group/field[@name='source_id']" position="after">
                <field
                    name="source_id"
                    options="{'no_create_edit': True, 'no_create': True}"
                    attrs="{'invisible': [('can_delete_initiatives_opportunity','=',True)], 'required': True}"
                />
            </xpath>
            <xpath expr="//page[@name='extra']/group/group/field[@name='source_id']" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('can_delete_initiatives_opportunity','=',False)], 'required': True}</attribute>
                <attribute
                    name="options"
                >{'color_field': 'color', 'no_create_edit': False, 'no_create': False}</attribute>
            </xpath>
            <xpath expr="//page[@name='extra']/group/group/field[@name='medium_id']" position="after">
                <field
                    name="medium_id"
                    options="{'no_create_edit': True, 'no_create': True}"
                    attrs="{'invisible': [('can_delete_initiatives_opportunity','=',True)]}"
                />
            </xpath>
            <xpath expr="//page[@name='extra']/group/group/field[@name='medium_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('can_delete_initiatives_opportunity','=',False)]}</attribute>
                <attribute
                    name="options"
                >{'color_field': 'color', 'no_create_edit': False, 'no_create': False}</attribute>
            </xpath>
            <xpath expr="//page[@name='extra']/group/group/field[@name='campaign_id']" position="after">
                <field
                    name="campaign_id"
                    options="{'create_name_field': 'title', 'always_reload': True, 'no_create_edit': True, 'no_create': True}"
                    attrs="{'invisible': [('can_delete_initiatives_opportunity','=',True)]}"
                />
            </xpath>
            <xpath expr="//page[@name='extra']/group/group/field[@name='campaign_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('can_delete_initiatives_opportunity','=',False)]}</attribute>
                <attribute
                    name="options"
                >{'color_field': 'color', 'no_create_edit': False, 'no_create': False}</attribute>
            </xpath>
        </field>
    </record>

    <record id="quick_create_opportunity_form" model="ir.ui.view">
        <field name="name">crm.lead.form.quick_create.inherit.almik</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.quick_create_opportunity_form" />
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='email_from']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
            <xpath expr="//group/field[@name='phone']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
        </field>
    </record>
</odoo>
