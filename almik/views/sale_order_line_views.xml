<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_line_tree" model="ir.ui.view">
        <field name="name">sale.order.line.tree.inherit.almik</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='price_subtotal']" position="after">
                <field name="margin" sum="Sum of Margin" optional="show" />
            </xpath>
        </field>
    </record>

    <record id="sale_order_line_view_form_readonly" model="ir.ui.view">
        <field name="name">sale.order.line.form.readonly.inherit.almik</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly" />
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group/field[@name='price_subtotal']" position="after">
                <field name="margin" sum="Sum of Margin" optional="show" />
            </xpath>
        </field>
    </record>
</odoo>
