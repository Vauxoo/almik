<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<record id="crm_lead_lost_view_form" model="ir.ui.view">
    <field name="name">crm.lead.lost.view.form</field>
    <field name="model">crm.lead.lost</field>
    <field name="inherit_id" ref="crm.crm_lead_lost_view_form" />
    <field name="arch" type="xml">
        <xpath expr="//form" position="inside">
            <field name="can_delete_initiatives_opportunity" invisible="1" />
        </xpath>
        <xpath expr="//field[@name='lost_reason_id']" position="after">
            <field
                    name="lost_reason_id"
                    options="{'no_create_edit': True, 'no_create': True}"
                    attrs="{'invisible': [('can_delete_initiatives_opportunity','=',True)]}"
                    required="1"
                />
        </xpath>
        <xpath expr="//field[@name='lost_reason_id']" position="attributes">
            <attribute name="attrs">{'invisible': [('can_delete_initiatives_opportunity','=',False)]}</attribute>
            <attribute name="required">1</attribute>
            <attribute name="options">{'no_create_edit': False}</attribute>
        </xpath>
        <xpath expr="//field[@name='lost_feedback']" position="attributes">
            <attribute name="required">1</attribute>
        </xpath>
    </field>
</record>
</odoo>
