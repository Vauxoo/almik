<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
        <t t-set="address" position="after">
            <t t-set="shipping_legend">Bill To:</t>
        </t>
        <xpath expr="//t[@t-set='information_block']//strong" position="attributes">
            <attribute name="t-out">shipping_legend</attribute>
        </xpath>
        <xpath expr="//t[@t-else]//t[@t-set='information_block']//strong" position="attributes">
            <attribute name="t-out">shipping_legend</attribute>
        </xpath>
        <p t-field="o.notes" position="after">
            <br />
            <div t-if="o.ship_to">
                <strong>Ship To:</strong>
                <div t-field="o.ship_to" name="purchase_ship_to" />
            </div>
        </p>
    </template>

    <template id="report_purchasequotation_document" inherit_id="purchase.report_purchasequotation_document">
        <t t-set="address" position="after">
            <t t-set="shipping_legend">Bill To:</t>
        </t>
        <xpath expr="//t[@t-set='information_block']//strong" position="attributes">
            <attribute name="t-out">shipping_legend</attribute>
        </xpath>
        <xpath expr="//t[@t-else]//t[@t-set='information_block']//strong" position="attributes">
            <attribute name="t-out">shipping_legend</attribute>
        </xpath>
        <p t-field="o.notes" position="after">
            <br />
            <div t-if="o.ship_to">
                <strong>Ship To:</strong>
                <div t-field="o.ship_to" name="purchase_ship_to" />
            </div>
        </p>
    </template>

</odoo>
