<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="account.action_bank_statement_tree" model="ir.actions.act_window">
        <field name="view_mode">tree,form</field>
    </record>

    <record id="bank_statement_almik_form" model="ir.ui.view">
        <field name="name">account.bank.statement.almik.form</field>
        <field name="model">account.bank.statement</field>
        <field name="arch" type="xml">
            <form string="Bank Statement">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="journal_id"/>
                        <field name="company_id"/>
                        <field name="date"/>
                        <field name="balance_start"/>
                        <field name="balance_end_real"/>
                        <field name="line_ids" widget="one2many_list">
                            <tree editable="bottom">
                                <field name="date" readonly="true" optional="hide"/>
                                <field name="company_id" invisible="true"/>
                                <field name="payment_ref" readonly="true" optional="hide"/>
                                <field name="ref" readonly="true" optional="hide"/>
                                <field name="name" readonly="true" optional="hide"/>
                                <field name="partner_id"  optional="hide"/>
                                <field name="amount" readonly="true" optional="hide"/>
                                <field name="currency_id" readonly="true" optional="hide"/>
                            </tree>
                            <form>
                                <field name="date"/>
                                <field name="payment_ref" />
                                <field name="ref" optional="hide"/>
                                <field name="name" optional="hide"/>        
                                <field name="amount"/>
                                <field name="currency_id"/>
                            </form>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
