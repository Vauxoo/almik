<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_almik_tree" model="ir.ui.view">
            <field name="name">account.move.almik.tree</field>
            <field name="model">account.move</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <data>
                    <field name="invoice_date_due" position="replace">
                        <field name="invoice_date_due" optional="show" attrs="{'invisible': [['payment_state', 'in', ('paid', 'in_payment', 'reversed')]]}"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="account_move_almik_form" model="ir.ui.view">
            <field name="name">account.move.almik.form</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="invoice_date" position="after">
                        <field name="invoice_date_due"/>
                    </field>
                </data>
            </field>
        </record>
    </data>
</odoo>