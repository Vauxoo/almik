<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <data noupdate="1">
        <record id="cron_rate_exchange" model="ir.cron">
            <field name="name">Cron Tipo De Cambio</field>
            <field name="model_id" ref="model_res_currency"/>
            <field name="state">code</field>
            <field name="code">model.rate_exchange()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name='interval_number'>1</field>
            <field name='interval_type'>days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="priority">1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 05:00:00')" />
        </record>

        <record id="notificacion_tc" model="mail.template">
            <field name="name">Notificacion Tipo de cambio</field>
            <field name="model_id" ref="model_res_currency"/>
            <field name="email_to">tlr@almik.com.mx, xochitl.martinez@rye.mx, ricardo.avila@rye.mx</field>
            <field name="subject">Tipo de cambio Odoo actualizado {{ object.rate }}</field>
            <field name="description">Tipo de cambio registrado: {{ object.rate }}</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Â¡Buen dia!<br/><br/>
                        Tipo de cambio registrado: {{ object.rate }}<br/>
                        Fecha registrada: {{ object.date }}<br/><br/><br/>
                        Saludos.
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="False"/>
        </record>
    </data>
</odoo>